{
  "name": "@shelf/table-of-contents",
  "version": "0.0.1",
  "description": "Fork of node-toc to reduce bundle size & rewritten in TypeScript",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "https://shelf.io"
  },
  "main": "lib",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rm -rf lib/ && yarn build:types && yarn build:code",
    "build:code": "babel src --out-dir lib --ignore '**/*.test.ts' --extensions '.ts' && find ./lib -name '*.test.d.ts' -delete",
    "build:types": "tsc --emitDeclarationOnly --declaration --isolatedModules false --declarationDir lib",
    "coverage": "yarn test --coverage",
    "lint": "eslint . --ext .js,.ts,.json --fix",
    "lint:ci": "eslint . --ext .js,.ts,.json",
    "prepack": "yarn build",
    "test": "TZ=UTC jest src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "lint-staged": {
    "*.{html,md,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts,json}": [
      "eslint --fix",
      "git add"
    ]
  },
  "babel": {
    "extends": "@shelf/babel-config/frontend-library"
  },
  "prettier": "@shelf/prettier-config",
  "dependencies": {
    "entities": "3.0.1",
    "lodash.defaults": "4.2.0",
    "lodash.template": "4.5.0",
    "slug": "5.1.0"
  },
  "devDependencies": {
    "@babel/cli": "7.17.3",
    "@babel/core": "7.17.5",
    "@shelf/babel-config": "0.1.4",
    "@shelf/eslint-config": "2.5.2",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.0.6",
    "@types/jest": "27.0.2",
    "@types/lodash.defaults": "4.2.6",
    "@types/lodash.template": "4.5.0",
    "@types/node": "14",
    "@types/slug": "5.0.2",
    "eslint": "8.1.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "lint-staged": "12.3.5",
    "prettier": "2.4.1",
    "typescript": "4.6.2"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  }
}
